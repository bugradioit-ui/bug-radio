const jwt = require('jsonwebtoken');
const User = require('../models/User');

/**
 * Middleware per verificare il token JWT - VERSIONE DEBUG
 */
const authMiddleware = async (req, res, next) => {
  try {
    const token = req.headers.authorization?.split(' ')[1];
    
    if (!token) {
      return res.status(401).json({ error: 'Token mancante' });
    }

    const decoded = jwt.verify(token, process.env.JWT_SECRET || 'secret_key_change_me');
    
    // ðŸ” DEBUG: Vediamo cosa c'Ã¨ nel token
    console.log('ðŸ” Token decodificato:', decoded);
    console.log('ðŸ” Cerco user con ID:', decoded.id);
    
    req.user = await User.findById(decoded.id);
    
    if (!req.user) {
      console.log('âŒ Utente non trovato con ID:', decoded.id);
      return res.status(401).json({ error: 'Utente non trovato' });
    }
    
    console.log('âœ… Utente trovato:', req.user.email, 'Role:', req.user.role);
    next();
  } catch (error) {
    console.log('âŒ Errore nel middleware:', error.message);
    res.status(401).json({ error: 'Token non valido' });
  }
};

/**
 * Middleware per verificare che l'utente sia admin
 */
const adminMiddleware = (req, res, next) => {
  if (req.user.role !== 'admin') {
    return res.status(403).json({ error: 'Accesso negato - Solo admin' });
  }
  next();
};

/**
 * Middleware per verificare che l'utente sia artista
 */
const artistMiddleware = (req, res, next) => {
  if (req.user.role !== 'artist') {
    return res.status(403).json({ error: 'Accesso negato - Solo artisti' });
  }
  next();
};

module.exports = {
  authMiddleware,
  adminMiddleware,
  artistMiddleware
};